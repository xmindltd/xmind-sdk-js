{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "lib": ["es5", "es6", "dom"],
    "sourceMap": true,
    "allowJs": false
  },
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "scripts",
    "docs",
    "example",
    "rollup.config.ts"
  ]
}
